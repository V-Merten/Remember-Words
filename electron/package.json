{
  "name": "remember-words",
  "version": "1.0.1",
  "main": "main.js",
  "description": "An application to remember and practice foreign words",
  "scripts": {
    "dist": "node ./scripts/build.js"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "cross-env-shell": "^7.0.3",
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "V-Merten",
        "repo": "Remember-Words"
      }
    ],
    "mac": {
      "sign": false
    },
    "productName": "RememberWords",
    "appId": "com.example.rememberwords",
    "asar": true,
    "asarUnpack": [
      "**/*.jar"
    ],
    "files": [
      "build/**/*",
      "main.js"
    ],
    "extraResources": [
      {
        "from": "java",
        "to": "java"
      },
      {
        "from": "db",
        "to": "db"
      }
    ],
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
