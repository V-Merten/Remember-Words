{
  "name": "remember-words",
  "version": "1.0.0",
  "main": "main.js",
  "description": "An application to remember and practice foreign words",
  "scripts": {
    "start": "electron .",
    "build-frontend": "cd ../frontend && npm run build",
    "copy-frontend": "rm -rf ./build && cp -r ../frontend/dist ./build",
    "dist": "npm run build-frontend && npm run copy-frontend && electron-builder --publish never"
  },
  "devDependencies": {
    "electron": "^35.2.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "V-Merten",
        "repo": "Remember-Words"
      }
    ],
    "mac": {
  "sign": false
    },
    "productName": "RememberWords",
    "appId": "com.example.rememberwords",
    "asar": true,
    "asarUnpack": [
      "**/*.jar"
    ],
    "files": [
      "build/**/*",
      "main.js"
    ],
    "extraResources": [
      {
        "from": "java",
        "to": "java"
      },
      {
        "from": "db",
        "to": "db"
      }
    ],
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
